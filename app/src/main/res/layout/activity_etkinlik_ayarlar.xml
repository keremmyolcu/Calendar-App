<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDFEFF"
    tools:context=".EtkinlikAyarlar">

    <Spinner
        android:id="@+id/zamanSpinner"
        android:layout_width="177dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hatirZaman" />

    <TextView
        android:id="@+id/lightdark"
        android:layout_width="146dp"
        android:layout_height="73dp"
        android:layout_marginBottom="153dp"
        android:text="Light/Dark Mode"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/hatirSiklik"
        app:layout_constraintTop_toBottomOf="@+id/hatirZaman" />

    <TextView
        android:id="@+id/hatirSiklik"
        android:layout_width="146dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:text="Varsayilan hatirlatma sıklıgı:"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hatirZaman"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/hatirZaman"
        android:layout_width="156dp"
        android:layout_height="74dp"
        android:layout_marginBottom="22dp"
        android:text="Varsayilan hatirlatma zamani:"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lightdark"
        app:layout_constraintEnd_toEndOf="@+id/lightdark"
        app:layout_constraintStart_toStartOf="@+id/lightdark"
        app:layout_constraintTop_toBottomOf="@+id/hatirSiklik" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ayarlarikon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="143dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="18dp"
        android:text="Varsayilan ringtone:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hatirSiklik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/ringSpinner"
        android:layout_width="177dp"
        android:layout_height="38dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Spinner
        android:id="@+id/siklikSpinner"
        android:layout_width="177dp"
        android:layout_height="38dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hatirSiklik" />

    <Button
        android:id="@+id/button2"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginBottom="48dp"
        android:text="KAYDET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightdark"
        app:layout_constraintVertical_bias="0.982" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginEnd="88dp"
        android:text="Light/Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lightdark" />
</androidx.constraintlayout.widget.ConstraintLayout>